                -->
            </div>
    </div>

    <button type="button" id="addNoteButton" class="btn btn-warning mb-2"><i class="far fa-comment-alt"></i>Додати нотатку</button>
    <button type="button" id="addListButton" class="btn btn-success mb-2"><i class="far fa-check-square"></i>Додати список справ</button>

    <!--Колонка-->

    <!--Виведення списку нотаток-->
    <div class="card-columns mt-2" id="notesList">
        <% notes.forEach((el)=>{ %>

        <!--Картка Нотатка-->
        <div class="card" data-type="note">
            <div class="card-body">
                <h5 class="card-title">Card Note Title</h5>
                <p class="card-text">This card has supporting text below as a natural lead-in to additional content.</p>
            </div>
        </div>
        <% }) %>


        <!--Картка Список-->
        <div class="card" data-type="list">
            <div class="card-body">
                <h5 class="card-title">Card List Title</h5>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <input type="checkbox" aria-label="Checkbox for following text input">
                        </div>
                    </div>
                    <input type="text" class="form-control" aria-label="Text input with checkbox">
                </div>
            </div>
        </div>

    </div>

</div>

<script src="js/index.js"></script>
</body>
</html>